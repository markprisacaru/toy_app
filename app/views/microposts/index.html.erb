<p id="notice"><%= notice %></p>
<div class="jumbotron" background-color="lightblue">
    <h1 align="center">Micro Posts</h1>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td>
        <button type="button" class="btn btn-primary"<%= link_to 'Show', micropost %></button>
        <button type="button" class="btn btn-info"<%= link_to 'Edit', edit_micropost_path(micropost) %></button>
        <button type="button" class="btn btn-danger"><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          
          
          
        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn-success"><%= link_to 'New Micropost', new_micropost_path %></button>
<button type="button" class="btn btn-warning"><%= link_to 'Users',  users_path  %></button>

